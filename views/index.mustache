<head>
    <title>Shopping List</title>
    <link rel="stylesheet" href="styles.css" type="text/css">
</head>
<body>
<h1>Shopping List</h1>

<form action='/shoppinglist' method='POST'>
    <input type="text" name="shoppinglist" />
    <input type="submit" />
</form>

<h3>Lists</h3>
<ul>
    {{#list}}
        <li>{{shoppinglist}}</li>
        <form action='/deleteList' method='POST'>
            <input type="hidden" name="listID" value='{{id}}' />
            <input type="submit" value="Delete" />
        </form>
        <form action='/grocerylist' method='POST'>
            <input type="text" name="item" placeholder="Input a grocery item" />
            <input type="number" name="quantity" placeholder="Input a quantity" />  
            <input type="submit" />
        </form>
       
    {{/list}}
</ul>
</body>